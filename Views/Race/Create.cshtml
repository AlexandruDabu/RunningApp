@using Data.Enum
@using GroopWebApp.ViewModels
@model CreateRaceViewModel
<form method="post" asp-action="Create" enctype="multipart/form-data">
<input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId"/>
  <div class="form-group mt-3">
    <label asp-for="Title">Title</label>
    <input asp-for="Title" class="form-control" placeholder="Title">
    <span asp-validation-for="Title" class="text-dancer"></span>
  </div>
  <div class="form-group mt-3">
    <label asp-for="Description">Description</label>
    <input asp-for="Description" class="form-control" placeholder="Description">
    <span asp-validation-for="Description" class="text-dancer"></span>
  </div>
  <div class="form-group mt-3">
    <label asp-for="RaceCategory">RaceCategory</label>
    <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()" class="form-control">
        <option>--Select--</option>
    </select>
    <span asp-validation-for="RaceCategory" class="text-dancer"></span>
  </div>
  <div class="form-group mt-3">
    <label asp-for="Address.Street">Street</label>
    <input asp-for="Address.Street" class="form-control" placeholder="Street">
    <span asp-validation-for="Address.Street" class="text-dancer"></span>
  </div>
  <div class="form-group mt-3">
    <label asp-for="Address.City">City</label>
    <input asp-for="Address.City" class="form-control" placeholder="City">
    <span asp-validation-for="Address.City" class="text-dancer"></span>
  </div>
  <div class="form-group mt-3">
    <label asp-for="Address.State">State</label>
    <input asp-for="Address.State" class="form-control" placeholder="State">
    <span asp-validation-for="Address.State" class="text-dancer"></span>
  </div>
  <div class="form-group mt-3">
    <label asp-for="Image">Image <span class="text-light">( Not Required )</span></label>
    <input type="file" asp-for="Image" class="form-control" placeholder="Image">
    <span asp-validation-for="Image" class="text-dancer"></span>
  </div>
  <button type="submit" class="mt-3 btn btn-primary">Submit</button>
</form>